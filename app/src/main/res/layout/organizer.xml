<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:weightSum="1">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/prevMonth"
			android:src="@layout/calendar_left_arrow_selector"
			android:layout_width="48dp"
			android:layout_height="fill_parent">
		</ImageView>
		<Button
			android:id="@+id/currentMonth"
			android:layout_weight="0.6"
			android:textColor="#697202"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@drawable/calendar_tile_new"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:text="TEST"
            android:textSize="15dp">
		</Button>
		<ImageView
			android:id="@+id/nextMonth"
			android:src="@layout/calendar_right_arrow_selector"
			android:layout_width="48dp"
			android:layout_height="fill_parent">
		</ImageView>
	</LinearLayout>

    <ImageView
        android:id="@+id/calendarheader"
        android:src="@drawable/blue_bg_with_text_ned_new"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:contentDescription="image"
        android:scaleType="fitXY">
    </ImageView>


    <GridView
		android:id="@+id/calendar"
		android:numColumns="7"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginRight="-5dp">
	</GridView>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventsDetails"
            android:background="@drawable/droplist_dark_new"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars="vertical"
            android:maxLines = "4"
            android:textColor="#FFFFFF"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp" />

</LinearLayout>
