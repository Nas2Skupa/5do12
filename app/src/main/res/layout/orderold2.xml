<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Odaberite datum!"
        android:id="@+id/activity_datepickertest_datebutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/calendar_bar_edit" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Odaberite termin!"
        android:id="@+id/activity_timepickertest_datebutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/calendar_bar_edit" />

    <Spinner
        android:id="@+id/service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/naruci"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginTop="18dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#adbb00"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="NARUÄŒI" />
</LinearLayout>